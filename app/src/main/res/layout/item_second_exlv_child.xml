<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/selector_color_item_exlv_child_tv_bg">

    <TextView
        android:id="@+id/item_second_exlv_child_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:text="child"
        android:textColor="@color/selector_color_item_exlv_child_tv_textcolor"
        android:textSize="25sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/item_second_exlv_child_hotiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_second_exlv_child_tv"
        android:src="@drawable/second_exlv_child_iv_hot"
        android:visibility="invisible" />
</RelativeLayout>