<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#aaa"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">
        <schaffer.myoho.DefinedView.DTabView
            android:id="@+id/fragment_tab_1"
            style="@style/style_info_tab"
            app:draw="@drawable/sort_none"
            app:text="最新"
            app:textColor="@color/selector_color_info_tabview_tv"
            app:textSize="10sp" />

        <schaffer.myoho.DefinedView.DTabView
            android:id="@+id/fragment_tab_2"
            style="@style/style_info_tab"
            app:draw="@drawable/sort_normal"
            app:text="价格"
            app:textColor="@color/selector_color_info_tabview_tv"
            app:textSize="10sp" />

        <schaffer.myoho.DefinedView.DTabView
            android:id="@+id/fragment_tab_3"
            style="@style/style_info_tab"
            app:draw="@drawable/sort_normal"
            app:text="折扣"
            app:textColor="@color/selector_color_info_tabview_tv"
            app:textSize="10sp" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_info_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>