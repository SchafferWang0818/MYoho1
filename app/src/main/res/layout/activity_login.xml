<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="schaffer.myoho.Activity.LoginActivity">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/login_count_edt"
        style="@style/style_input_edt"
        android:hint="账户" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/login_pwd_edt"
        style="@style/style_input_edt"
        android:layout_below="@id/login_count_edt"
        android:password="true"
        android:hint="密码" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_pwd_edt"
        android:layout_centerHorizontal="true"
        android:onClick="login"
        android:background="@color/colorPrimary"
        android:text="登录" />

</RelativeLayout>
